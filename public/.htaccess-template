# Copy this to .htaccess in the same directory, and

AuthType Basic
AuthName "What do you think you're doing?"
# Add the full path to your auth user file (not in or below this dir) to the
# following line 
AuthUserFile 
# Add the username to the following line
Require user 

RewriteEngine On

RewriteCond %{DOCUMENT_ROOT}/cache/index.html -f
RewriteRule ^$ cache/index.html [L]

RewriteCond %{DOCUMENT_ROOT}/cache%{REQUEST_URI}.html -f
RewriteRule ^(.+)$ cache/$1.html [L]
