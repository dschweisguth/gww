<% if ! people.empty? -%>
<%= pluralize changes.length, change_name %><%= change_verb %> by ...

<% people.each do |person| -%>
<b><%= link_to_person person %></b>
<% person[attr].each do |change| -%><%= link_to titled_image_tag(url_for_flickr_image(change.photo, 's'), render(:partial => 'shared/alt', :locals => { :photo => change.photo }), :size => '50x50'), url_for_flickr_photo(change.photo) %><% if stars then star = change.star_for_age; if star -%><%= titled_image_tag image_for_star(star), 'Unfound for ' + pluralize(change.years_old, 'year') + '!', :size => '15x50' %><% end end -%> <% end %>
<% end -%>

<% end -%>
