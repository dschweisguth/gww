<% if ! people.empty? -%>
<%= pluralize changes.length, change_name %><%= change_verb %> by ...

<% people.each do |person| -%>
<%= render :partial => 'admin/guesses/report/link_to_person',
  :locals => { :person => person } %>
<% person[attr].each do |change| -%>&lt;a href="<%= url_for_flickr_photo change.photo %>">&lt;img height="50" width="50" src="<%= url_for_flickr_image change.photo, 's' %>" <%= render :partial => 'admin/guesses/report/alt_and_title', :locals => { :photo => change.photo } %>&gt;&lt;/a&gt; <% end %>
<% end -%>

<% end -%>
