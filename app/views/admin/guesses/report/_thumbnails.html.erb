<% if ! people.empty? -%>
<%= pluralize changes.length, change_name %><%= change_verb %> by ...

<% people.each do |person| -%>
<b><%= link_to_person person %></b>
<% person[attr].each do |change| -%><a href="<%= url_for_flickr_photo change.photo %>"><img height="50" width="50" src="<%= url_for_flickr_image change.photo, 's' %>" <%= alt_and_title render :partial => 'shared/alt', :locals => { :photo => change.photo } %>/></a><% if stars then star = change.star_for_age; if star -%><img height="50" width="15" src="<%= image_for_star star %>" <%= alt_and_title 'Unfound for ' + pluralize(change.years_old, 'year') + '!' %>/><% end end -%> <% end %>
<% end -%>

<% end -%>
