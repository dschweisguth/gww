<% if ! people.empty? -%>
<%= pluralize changes.length, change_name %><%= change_verb %> by ...

<% people.each do |entry| -%>
<strong><%= link_to_person entry[0] %></strong>
<% entry[1].each do |change| -%>
<%= link_to titled_image_tag(url_for_flickr_image(change.photo, 's'), render(:partial => 'shared/alt', :locals => { :photo => change.photo }), :size => '50x50'), url_for_flickr_photo(change.photo) -%>
<% if change.respond_to? :star_for_age then -%>
<% star = change.star_for_age; if star %><%= titled_image_tag image_for_star(star), 'Unfound for ' + pluralize(change.years_old, 'year') + '!', :size => '15x50' %><% end -%>
<% star = change.star_for_speed; if star %><%= titled_image_tag image_for_star(star), 'Guessed in ' + pluralize(change.seconds_old, 'second') + '!', :size => '15x50' %><% end -%>
<% end -%>
 <% end %>
<% end -%>

<% end -%>
