<% if ! people.empty? -%>
<%= pluralize changes.length, change_name %><%= change_verb %> by ...

<% people.each do |person| -%>
<%= render :partial => 'admin/guesses/report/link_to_person',
  :locals => { :person => person } %>
<% person[attr].each do |change| -%><a href="<%= url_for_flickr_photo change.photo %>"><img height="50" width="50" src="<%= url_for_flickr_image change.photo, 's' %>" alt="<%= render :partial => 'shared/alt', :locals => { :photo => change.photo } %>" title="<%= render :partial => 'shared/alt', :locals => { :photo => change.photo } %>"></a><% if stars && change.years_old >= 1 -%><img height="50" width="15" src="<%= star_image change %>" alt="Unfound for <%= pluralize change.years_old, 'year' %>!" title="Unfound for <%= pluralize change.years_old, 'year' %>!"/><% end -%> <% end %>
<% end -%>

<% end -%>
