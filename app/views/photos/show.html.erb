<% content_for :title do %>Photo <%= @photo.id %>, by <%= @photo.person.username %><% end %>
<%= sandwich do %>
<%= render 'image_and_status' %>

<p id="comments-header">Comments</p>
<% if ! @comments.empty? -%>
  <div id="comments">
    <% @comments.each do |comment| -%>
      <div class="comment">
        <strong><%=h comment.username %></strong> <span class="ago">(<%= ago comment.commented_at %>)</span><br/>
        <%= comment.comment_text %><br/>
      </div>
      <br/>
    <% end -%>
  </div>
<% else -%>
No comments available.
<% end -%>

<br/>
<% end %>
