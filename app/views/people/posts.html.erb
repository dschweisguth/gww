<%= sandwich 'person_breadcrumbs' do %>
<%= title_and_h1 "#{pluralize @photos.length, 'photo'} posted by #{@person.username}" %>

<table class="dark">
  <tr>
    <td class="empty"></td>
    <th>photo</th>
    <th>date added</th>
    <th>last update</th>
    <th>mapped</th>
    <th>game status</th>
  </tr>  
<% @photos.each_with_index do |photo, photo_index| %>
  <tr>
    <td class="row-number"><%= photo_index + 1 %>.</td>
    <td class="thumbnail"><%= thumbnail photo %></td>
    <td><%= local_date photo.dateadded %></td>
    <td><%= local_date photo.lastupdate %></td>
    <td><%= ! photo.accuracy.nil? %></td>
    <td><strong><%= photo.game_status %></strong></td>
  </tr>
<% end %>
</table>

<% end %>
