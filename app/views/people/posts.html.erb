<%= render :partial => 'person_breadcrumbs' %>
<hr/>
<h1><%= @photos.length %> photos posted by <%=h @person.username %></h1>

<table class="dark">
  <tr>
    <td class="empty"></td>
    <th colspan="2">links</th>
    <th>date added</th>
    <th>last update</th>
    <th>mapped</th>
    <th>game status</th>
  </tr>  
<% @photos.each_with_index do |photo, photo_index| %>
  <tr>
    <td class="row-number"><%= photo_index + 1 %>.</td>
    <td><%= link_to_flickr_photo photo %></td>
    <td><%= link_to_photo photo %></td>
    <td><%= local_date photo.dateadded %></td>
    <td><%= local_date photo.lastupdate %></td>
    <td><%= photo.mapped %></td>
    <td><b><%= photo.game_status %></b></td>
  </tr>
<% end %>
</table>

<hr/>
<%= render :partial => 'person_breadcrumbs' %>
