<%= render :partial => 'person_breadcrumbs' %>
<hr/>
<h1><%= @photos.length %> photos posted by <%= @person[:username] %></h1>

<table>
  <tr>
    <td colspan="2">links</td>
    <td>date added</td>
    <td>last update</td>
    <td>mapped</td>
    <td>game status</td>
  </tr>  
<% for photo in @photos %>
  <tr>
    <td><a href="<%= photo.page_url %>">Flickr</a></td>
    <td><%= link_to 'GWW', show_photo_url(photo) %></td>
    <td><%= photo.dateadded.getlocal.strftime '%Y/%m/%d' %></td>
    <td><%= photo.lastupdate.getlocal.strftime '%Y/%m/%d' %></td>
    <td><%= photo.mapped %></td>
    <td><b><%= photo.game_status %></b></td>
  </tr>
<% end %>
</table>

<hr/>
<%= render :partial => 'person_breadcrumbs' %>
