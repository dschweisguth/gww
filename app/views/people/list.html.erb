<%= render :partial => 'shared/breadcrumbs' %>
<hr/>
<h1><%= @people.length %> active members</h1>

<table>
<tr>
  <th><%= link_to 'Member', list_people_url(:sorted_by => 'username') %></th>
  <th><%= link_to 'Score', list_people_url(:sorted_by => 'score') %></th>
  <th><%= link_to 'Posts', list_people_url(:sorted_by => 'posts') %></th>
  <th><%= link_to 'Guesses per day', list_people_url(:sorted_by => 'guesses-per-day') %></th>
  <th><%= link_to 'Posts per guess', list_people_url(:sorted_by => 'posts-per-guess') %></th>
</tr>
<% @people.each do |person| %>
<tr class="<%= cycle 'odd', 'even' %>">
  <td><%= link_to person.username, show_person_url(person) %></td>
  <td class="number"><%= person[:guess_count] %></td>
  <td class="number"><%= person[:post_count] %></td>
  <td class="number"><%= sprintf "%.4f", person[:guesses_per_day] %></td>
  <td class="number"><%= person[:posts_per_guess].infinite? ? '&#8734' : sprintf("%.4f", person[:posts_per_guess]) %></td>
</tr>
<% end %>
</table>

<hr/>
<%= render :partial => 'shared/breadcrumbs' %>
