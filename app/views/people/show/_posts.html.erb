<strong><%=h @person.username %> has posted <%= pluralize @posts.length, 'photo' %></strong><br/>

<% if ! @unfound_photos.empty? -%>
<%= @unfound_photos.length %> <%= singularize 'remain', @unfound_photos.length %> unfound<% if @unfound_photos.any? { |p| p.game_status == 'unconfirmed' } %> or <span class="unconfirmed">unconfirmed</span><% end %>:
<%   @unfound_photos.each_with_index do |photo, photo_index| -%>
<% if photo.game_status == 'unconfirmed' %><span class="unconfirmed"><% end %><%= link_to photo_index + 1, show_photo_path(photo) %><% if photo.game_status == 'unconfirmed' %></span><% end %>
<%   end -%>
<br/>
<% end -%>

<% if ! @revealed_photos.empty? -%>
<%= @revealed_photos.length %> <%= singularize 'were', @revealed_photos.length %> revealed:
<%   @revealed_photos.each_with_index do |photo, photo_index| -%>
<%= link_to photo_index + 1, show_photo_path(photo) %>
<%   end -%>
<br/>
<% end -%>

<% @guessers.each do |entry| -%>
<%=  entry[1].length %> <%= singularize 'were', entry[1].length %> guessed by <%= link_to_person entry[0] %>:
<%   entry[1].each_with_index do |photo, photo_index| -%>
<%=    link_to photo_index + 1, show_photo_path(photo) %>
<%   end -%>
<br/>
<% end -%>
