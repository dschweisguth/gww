<table id="trophies">
<tr id="trophies-headers">
  <% if first_guess %><th>First guess</th><% end %>
  <% if first_post %><th>First post</th><% end %>
  <% if oldest_guess %><th>Oldest post guessed</th><% end %>
  <% if fastest_guess %><th>Fastest guess</th><% end %>
  <% if longest_lasting_guess %><th>Longest-lasting post</th><% end %>
  <% if shortest_lasting_guess %><th>Fastest-guessed post</th><% end %>
</tr>
<tr>
  <% if first_guess %><td><%= render :partial => 'people/show/thumbnail', :locals => { :photo => first_guess.photo } %></td><% end %>
  <% if first_post %><td><%= render :partial => 'people/show/thumbnail', :locals => { :photo => first_post } %></td><% end %>
  <% if oldest_guess %><td><%= render :partial => 'people/show/thumbnail', :locals => { :photo => oldest_guess.photo } %></td><% end %>
  <% if fastest_guess %><td><%= render :partial => 'people/show/thumbnail', :locals => { :photo => fastest_guess.photo } %></td><% end %>
  <% if longest_lasting_guess %><td><%= render :partial => 'people/show/thumbnail', :locals => { :photo => longest_lasting_guess.photo } %></td><% end %>
  <% if shortest_lasting_guess %><td><%= render :partial => 'people/show/thumbnail', :locals => { :photo => shortest_lasting_guess.photo } %></td><% end %>
</tr>
<tr id="trophies-captions">
  <% if first_guess %><td><%= first_guess.guessed_at.getlocal.strftime '%B %d, %Y' %></td><% end %>
  <% if first_post %><td><%= first_post.dateadded.getlocal.strftime '%B %d, %Y' %></td><% end %>
  <% if oldest_guess %><td>Guessed after <%= oldest_guess.ymd_elapsed %></td><% end %>
  <% if fastest_guess %><td>Guessed in <%= fastest_guess.time_elapsed %></td><% end %>
  <% if longest_lasting_guess %><td>Guessed after <%= longest_lasting_guess.ymd_elapsed %></td><% end %>
  <% if shortest_lasting_guess %><td>Guessed in <%= shortest_lasting_guess.time_elapsed %></td><% end %>
</tr>
<tr id="trophies-places">
  <% if first_guess %><td></td><% end %>
  <% if first_post %><td></td><% end %>
  <%= render :partial => 'people/show/old_guess_place', :locals => { :guess => oldest_guess } %>
  <%= render :partial => 'people/show/fast_guess_place', :locals => { :guess => fastest_guess } %>
  <%= render :partial => 'people/show/old_guess_place', :locals => { :guess => longest_lasting_guess } %>
  <%= render :partial => 'people/show/fast_guess_place', :locals => { :guess => shortest_lasting_guess } %>
</tr>
</table>
