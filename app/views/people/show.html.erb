<%= head_javascript 'shared/GWW', 'shared/aboutAutoMapping' %>
<% content_for :head do javascript_tag '$(GWW.shared.aboutAutoMapping.setUp);' end %>
<%= sandwich 'people/breadcrumbs' do %>
<%= title_and_h1 @person.username %>

<p>On Flickr:
<a href="https://www.flickr.com/people/<%= @person.pathalias || @person.flickrid %>/"><%= @person.username %>'s profile</a> -
<a href="https://www.flickr.com/people/<%= @person.pathalias || @person.flickrid %>/photosof/">photos of <%= @person.username %></a> -
<a href="https://www.flickr.com/photos/<%= @person.pathalias || @person.flickrid %>/"><%= @person.username %>'s photostream</a> -
<a href="https://www.flickr.com/photos/<%= @person.pathalias || @person.flickrid %>/map/"><%= @person.username %>'s map</a> -
<a href="https://www.flickr.com/photos/<%= @person.pathalias || @person.flickrid %>/favorites/"><%= @person.username %>'s favorites</a></p>

<p>In Guess Where SF:
<%= link_to "#{@person.username}'s unfounds", search_photos_with_terms_path("game_status/unfound,unconfirmed/posted-by/#{@person.username}") %> -
<%= link_to "#{@person.username}'s posts", search_photos_with_terms_path("posted-by/#{@person.username}") %> -
<%= link_to "#{@person.username}'s guesses", person_guesses_path(@person) %> -
<%= link_to "#{@person.username}'s comments", person_comments_path(@person, 1) %> -
<%= link_to "#{@person.username}'s map", person_map_path(@person) %></p>

<h2>Standings</h2>

<% if @guesses.empty? %>
  <%= @person.username %> has never made a correct guess.<br/>
<% else %>
  <%= @person.username %> is <%= @tied ? 'tied for' : 'in' %> <%= @place.ordinal %> place with a score of <%= @guesses.length %>.<br/>
  <%= render 'people/show/high_scorers', high_scorers: @weekly_high_scorers, period: 'week' %>
  <%= render 'people/show/high_scorers', high_scorers: @monthly_high_scorers, period: 'month' %>
<% end %>
<br/>

<% if @posts.empty? %>
  <%= @person.username %> has never posted a photo to the group.<br/>
<% else %>
  <%= @person.username %> has posted <%= pluralize @posts.length, 'photo' %> to the group, <%= if @posts_tied then 'tied for ' end %>the <%= if @posts_place > 1 then "#{@posts_place.ordinal} " end %>most.<br/>
  <%= render 'people/show/top_posters', top_posters: @weekly_top_posters, period: 'week' %>
  <%= render 'people/show/top_posters', top_posters: @monthly_top_posters, period: 'month' %>
<% end %>

<%= render 'people/show/trophies' %>

<%= render 'people/show/guesses' %>

<%= render 'people/show/posts' %>

<% end %>
